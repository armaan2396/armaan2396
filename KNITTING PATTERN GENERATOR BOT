function handleLogin(event) { event.preventDefault(); const username = 
document.getElementById('username').value; const password = document.getElementById('password').value; 
 
if (username && password) { gameState.isLoggedIn = true; gameState.username = username; 
updateAuthUI(); 
toggleLogin(); 
} 
} 
